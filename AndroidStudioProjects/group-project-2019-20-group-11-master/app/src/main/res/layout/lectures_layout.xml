<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center|top"
    android:padding="20dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/lecture_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:text="Module Title Lectures"
        android:textColor="#0C0C0C"
        android:textSize="40sp"
        app:fontFamily="sans-serif-black" />

    <TextView
        android:id="@+id/LecturesDescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please select a lecture to view and ask questions."/>


    <Button
        android:id="@+id/week1Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center|top"
        android:onClick="onWeek1ButtonClick"
        android:text="Lecture 1"
        android:textColor="#0A0A0A"
        android:textSize="20sp" />


    <Button
        android:id="@+id/week2Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center|top"
        android:text="Lecture 2"
        android:textColor="#0A0A0A"
        android:textSize="20sp" />


    <Button
        android:id="@+id/week3Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center|top"
        android:text="Lecture 3"
        android:textColor="#0A0A0A"
        android:textSize="20sp" />


    <Button
        android:id="@+id/Week4Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center|top"
        android:text="Lecture 4"
        android:textColor="#0A0A0A"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical">

    </LinearLayout>

</LinearLayout>

